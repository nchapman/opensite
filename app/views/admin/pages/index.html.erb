<% @page_title = "Listing pages" %>

<table>
  <tr>
    <th>Title</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Destroy</th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%=h page.title %></td>
    <td><%= link_to "Show", [:admin, @site, page] %></td>
    <td><%= link_to "Edit", edit_admin_site_page_path(@site, page) %></td>
    <td><%= link_to "Destroy", [:admin, @site, page], :confirm => "Are you sure?", :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to "New page", new_admin_site_page_path(@site) %>