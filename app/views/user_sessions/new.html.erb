<h1>Login</h1>

<% form_for @user_session, :url => user_sessions_path do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %><br />
  </p>
  <p>
    <%= f.check_box :remember_me %><%= f.label :remember_me %>
  </p>
  <p><%= f.submit "Login" %></p>
<% end %>